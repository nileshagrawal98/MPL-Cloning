        function setTrendingNow() {
            let counter = 0;
            let trending = document.querySelector("#trending_container > span:nth-of-type(2)");
            trending.textContent = trendingItems[counter];
            trending.style.transition = "opacity 500ms ease, margin-left 500ms ease";
            setTimeout(() => {
                trending.style.opacity = 0;
                trending.style.marginLeft = "0.2rem";
            }, 3700);
            setInterval(() => {
                setTimeout(() => {
                    trending.style.opacity = 1;
                    trending.style.marginLeft = "2rem";
                }, 200);
                setTimeout(() => {
                    trending.style.opacity = 0;
                    trending.style.marginLeft = "0.2rem";
                }, 3700);

                counter++;
                trending.textContent = trendingItems[(counter % trendingItems.length)];
            }, 4000);
        }
        setTrendingNow();


        async function getArticleData(url){
            try{
                let res = await fetch(url);
                let data = await res.json();
                // console.log(data)
                return data;
            } catch (error) {
                console.log(error);
            }
        }

        async function setHighlightedNews() {

            let data = await getArticleData('http://localhost:3000/articles?latest=true&category=Fantasy&limit=4');

            // console.log(data);

            let container = document.getElementById("highlighted_news");

            let content = document.createElement("div");

            // console.log(data)

            for (let i = 0; i < 4; i++) {

                let div = document.createElement("div");

                let div1 = document.createElement("div");
                div1.className = "highlighted_news_content";

                let span = document.createElement("span");
                span.textContent = "Cricket";

                let p = document.createElement("p");
                p.textContent = data[i].title;

                div1.append(span, p);

                let img_div = document.createElement("div");

                img_div.style.backgroundImage = `url(${data[i].urlToImage})`;

                div.append(div1, img_div);

                if (i == 0) {
                    container.append(div);
                } else {
                    content.append(div);
                }
            }
            container.append(content);
        }
        setHighlightedNews();


        async function setMatchPrediction() {
            let data = await getArticleData('http://localhost:3000/articles?latest=true&category=Fantasy Prediction&limit=5');

            let container = document.getElementById("match_prediction");

            let content = document.createElement("div");

            for (let i = 0; i < 5; i++) {
                let div = document.createElement("div");

                let imgDiv = document.createElement("div");

                let img = document.createElement("img");
                img.src = data[i].urlToImage;

                imgDiv.append(img);

                let div2 = document.createElement("div");

                let title = document.createElement("p");
                title.textContent = data[i].title;

                let date = document.createElement("p");
                date.textContent = data[i].publishedAt;

                div2.append(title, date);

                if (i == 0) {
                    let description = document.createElement("p");
                    description.textContent = data[i].description;

                    div2.append(description);
                }

                div.append(imgDiv, div2);

                content.append(div);

            }

            container.append(content);

        }
        setMatchPrediction()

        async function setLatestPosts() {
            let data = await getArticleData('http://localhost:3000/articles?latest=true&limit=15')

            // console.log(data)

            let container = document.getElementById("latest_posts");

            let content = document.createElement("div");

            for (let i = 0; i < 15; i++) {
                let div = document.createElement("div");

                let imgDiv = document.createElement("div");

                let img = document.createElement("img");
                img.src = data[i].urlToImage;

                let news = document.createElement("span");
                news.textContent = "Sports";

                imgDiv.append(img, news);

                let title = document.createElement("p");
                title.textContent = data[i].title;

                div.append(imgDiv, title);

                content.append(div);
            }

            container.append(content);

        }
        setLatestPosts();


        async function setDigitalGames() {

            let data = await getArticleData('http://localhost:3000/articles?latest=true&category=Games&limit=8');

            let digitalGames = document.getElementById("digital_games");

            let content = document.createElement("div");

            data.forEach(({ urlToImage, title }) => {
                let div = document.createElement("div");

                let imgDiv = document.createElement("div");
                imgDiv.style.backgroundImage = `url(${urlToImage})`;

