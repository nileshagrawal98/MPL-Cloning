        setDigitalGames();

        async function setPopularTrends() {
            let data = await getArticleData('http://localhost:3000/articles?category=MPL Announcements&limit=15');

            let container = document.getElementById("popular_trends");

            let content = document.createElement("div");

            for (let i = 0; i < 3; i++) {
